@model IEnumerable<SmartCommerce.Application.DTOs.ProductDto>

<h1>Shop</h1>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@product.ImageUrl" class="card-img-top" />
                <div class="card-body">
                    <h5>@product.Name</h5>
                    <p>@product.Description</p>
                    <p>Price: @product.Price.ToString("C")</p>
                    <a href="/Shop/Details/@product.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
